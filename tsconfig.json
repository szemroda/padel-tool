{
    "compilerOptions": {
        "noEmit": true,
        "target": "esnext",
        "module": "nodenext",
        "rewriteRelativeImportExtensions": true,
        "erasableSyntaxOnly": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true
    },
    "include": ["**/*"],
    "exclude": ["node_modules"]
}
